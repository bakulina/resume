{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
    <section>
      {{> title data="work history" big=true}}
      
        <div>
            <ul>
          {{#each works}}
           <li>
            <div>{{position}}</div>

            <br>

      <div>{{duration.from}} -
          {{#if duration.to}} 
          {{duration.to}}
            {{else}} 
            (работаю) 
            {{/if}}
            </div>
      <br>
      <div>{{#if company.url}}
      {{> link text=company.name href=company.url  blank=true noline=true}}
       {{else}}
      <b>{{company.name}}</b>
      {{/if}}

    
      <div>
     <strong>projects({{ projectAmount}})</strong>
     </div> 
      {{/each}}
    </ul>
    <ul>
      {{#each projects}}
      <li>
        <div>{{> link text=name href=url blank=true noline=true}}</div>
       <br>
       <div>
        <p>{{about}}</p>
       </div>
       <br>
       <div>
        <ul>
          {{#each stacks}}
          <li>{{name}}</li>
          {{/each}}
        </ul>
       </div>
       <br>
       <div>
        <em>project awards ({{awardAmount}})</em>
       </div>
       <br>
       <div>
        <ul>
          {{#each awards}}
          <li>{{name}}</li>
          {{/each}}
        </ul>
       </div>




      </li>

        
       {{/each}}

      
    
    </ul>
      
         
        </div>
    </section>
    </main>
     {{/with}}
    </div>
       
        
       
                
           
       
        
        


